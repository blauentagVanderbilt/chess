<table class="chess-board">
  <thead>
    <tr class="row">
      <th class="blank"></th>
      <% 8.times do %>
        <th></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% 8.times do |y| %>
      <tr class="row">
        <th></th>
        <% 8.times do |x| %>
          <td class="square" data-x="<%= x %>" data-y="<%= y %>"></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>