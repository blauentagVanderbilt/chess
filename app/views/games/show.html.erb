<table class="chess-board">
  <thead>
    <tr>
      <th class="blank"></th>
      <% 8.times do %>
        <th></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% 8.times do %>
      <tr>
        <th></th>
        <% 8.times do %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<h1> This is the game page</h1>
<h5>These are the players</h5>
  <p>White player: <%= @game.white_player_id %></p>
  <p>Black player: <%= @game.black_player_id %></p>
  <%= simple_form_for @game, url: forfeit_game_path(@game) do |f| %>
    <%= f.submit "I FORFEIT!", class: "btn btn-primary col-4" %>
  <% end %>
